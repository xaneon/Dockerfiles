FROM alpine:3.9

ARG GUID
ENV GUID=1000

# COPY sudoers /etc/

RUN apk --update add bash wget dpkg-dev sudo 

RUN \
    adduser -u $GUID -G wheel -D alpine && \
    rm -rf /var/cache/apk/* && \
    sed -i '/%wheel/s/^# //' /etc/sudoers && \
    echo "root:root" | chpasswd && \
    echo "alpine:alpine" | chpasswd

USER alpine
